<%= javascript_include_tag 'mentions.js', plugin: 'redmine_mentions' %>

<%= javascript_tag do %>
$(document).on('focus', '[data-auto-complete=true]', function(event) {
  inlineMentionAutoComplete(event.target);
})

$(function() {
  $('#issue_description').attr('data-users-url', "<%= mentions_users_auto_completes_path(project_id: @issue.project, user_id: User.current.id) %>&q=");
  $('#issue_notes').attr('data-users-url', "<%= mentions_users_auto_completes_path(project_id: @issue.project, user_id: User.current.id) %>&q=");
})
<% end %>
